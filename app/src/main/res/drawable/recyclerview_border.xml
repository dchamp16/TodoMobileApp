<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    <item android:top="1dp">
        <shape>
            <solid android:color="#C54F4F"/> <!-- The color of your RecyclerView background for the border to show -->
            <stroke android:width="2dp" android:color="#FF000000"/> <!-- The color of the border -->
        </shape>
    </item>
</layer-list>
